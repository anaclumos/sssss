{
  "rules": [
    {
      "description": "Caps Lock â†’ Super Key (control+shift+option) (F16 if alone)",
      "manipulators": [
        {
          "from": {
            "key_code": "caps_lock"
          },
          "to": [
            {
              "key_code": "left_shift",
              "modifiers": ["left_control", "left_option"]
            }
          ],
          "to_if_alone": [
            {
              "key_code": "f16"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Use Super + D to F13 (Remap this in Settings to 'Show Desktop')",
      "manipulators": [
        {
          "from": {
            "key_code": "d",
            "modifiers": {
              "mandatory": ["left_control", "left_option", "left_shift"]
            }
          },
          "to": [
            {
              "key_code": "f13"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Use Super + 5 to Caps Lock",
      "manipulators": [
        {
          "from": {
            "key_code": "5",
            "modifiers": {
              "mandatory": ["left_control", "left_option", "left_shift"]
            }
          },
          "to": [
            {
              "key_code": "caps_lock"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Use fn(globe) to control + command + space  (Remap this in Raycast to 'Show Emoji')",
      "manipulators": [
        {
          "from": {
            "key_code": "fn"
          },
          "to": [
            {
              "key_code": "spacebar",
              "modifiers": ["left_command", "left_control"]
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Use Super + E to control + up_arrow",
      "manipulators": [
        {
          "from": {
            "key_code": "e",
            "modifiers": {
              "mandatory": ["left_control", "left_option", "left_shift"]
            }
          },
          "to": [
            {
              "key_code": "up_arrow",
              "modifiers": ["left_control"]
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Use Super + \\ to Fn + C (Control Center)",
      "manipulators": [
        {
          "from": {
            "key_code": "backslash",
            "modifiers": {
              "mandatory": ["left_control", "left_option", "left_shift"]
            }
          },
          "to": [
            {
              "key_code": "c",
              "modifiers": ["fn"]
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "R Command to Option + Control + M (Remap this in Keyboard Maestro and Gureum to 'Change Input Method, Korean')",
      "manipulators": [
        {
          "from": {
            "key_code": "right_command",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "right_command",
              "lazy": true
            }
          ],
          "to_if_alone": [
            {
              "key_code": "m",
              "modifiers": ["left_control", "left_option"]
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "L Command to Option + Control + N (Remap this in Keyboard Maestro and Gureum to 'Change Input Method, English')",
      "manipulators": [
        {
          "from": {
            "key_code": "left_command",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "left_command",
              "lazy": true
            }
          ],
          "to_if_alone": [
            {
              "key_code": "n",
              "modifiers": ["left_control", "left_option"]
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Map Alt + F4 to Command + Q",
      "manipulators": [
        {
          "from": {
            "key_code": "f4",
            "modifiers": {
              "mandatory": ["left_alt"],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "q",
              "modifiers": ["left_command"]
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Map Control + W to Command + W",
      "manipulators": [
        {
          "from": {
            "key_code": "w",
            "modifiers": {
              "mandatory": ["left_control"],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "w",
              "modifiers": ["left_command"]
            }
          ],
          "type": "basic"
        }
      ]
    }
  ],
  "title": "SSSSS (Sunghyun's Super Streamlined Shortcuts Setup)"
}
